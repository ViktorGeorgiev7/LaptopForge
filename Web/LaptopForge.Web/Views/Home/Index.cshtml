@using LaptopForge.Common
@using LaptopForge.Data.Models.Models
@model List<Laptop>
@{
    this.ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS files -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" />

    <!-- Custom styles -->
    <style type="text/css">
        .carousel-control {
            font-size: 20px; /* Adjust the font size as needed */
            width: 30px; /* Adjust the width as needed */
            height: 30px; /* Adjust the height as needed */
            line-height: 30px; /* Adjust the line height as needed */
            border-radius: 15px; /* Optional: Round the corners for a nicer look */
        }
        .carousel-content {
            color: black;
            display: flex;
            text-align: center;
        }
        .setborder{
            border-color: black;
            border-width: 15px;
        }

        .main-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            padding: 20px;
        }

        .side-div,
        .center-image {
            text-align: center;
            flex: 1;
        }

            .sub-div img,
            .center-image img {
                max-width: 100%;
                height: auto;
            }

        .side-div {
            max-width: 250px; /* Adjust the width as needed */
            margin-bottom: 20px;
        }

        .sub-div {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
@* 
    <div class="text-center">
        <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>
        <p>There are currently @ViewBag.LaptopCount laptops.</p>
        <p>There are also @ViewBag.UserCount users.</p>
    </div> *@
    <div class="container" style="margin-top:100px">
        <div id="myCarousel" class="carousel" data-ride="carousel" data-interval="false" data-pause="hover">
            <div class="carousel-inner" role="listbox">
                @for (var i = 0; i < Model.Count(); i++)
                {
                    var showClass = (i == 0 ? "active" : "");
                    var path = Model[i];
                    <div class="item @showClass">
                        <div class="row">
                            <!-- Text on the Left -->
                            <div class="col-md-5" style="margin-left:20px">
                                    <a class="fw-bolder"style=";font-size:49px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Choosing the right laptop made easy with LaptopForge</a>
                                <p style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size: 24px; color: black; line-height: 1.6; margin: 0;">
                                        Our carefully selected collection ensures you find reliable options without breaking the bank. Discover budget-friendly laptops for students, professionals, and everyday users.
                                    </p>
                            </div>

                            <!-- Image on the Right -->
                            <div class="col-md-6" style="margin-left:88px">
                                <div style="position: relative;">
                                    <p class="setborder" style="position: relative;">
                                        <a href="/Laptops/GetLaptop/@Model[i].Id">
                                            <img src="@Model[i].ImageUrl" style="width: 100%; height: auto; border-radius: 12px;" />
                                        </a>

                                        <!-- Carousel Controls -->
                                        <a class="left carousel-control" style="height: 100%; width: 10%; left: 0; top: 0;" href="#myCarousel" role="button" data-slide="prev">
                                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true" style="font-size: 30px; color: #333; position: absolute; top: 50%; transform: translateY(-50%);"></span>
                                            <span class="sr-only">&lt;</span>
                                        </a>
                                        <a class="right carousel-control" style="height: 100%; width: 10%; right: 0; top: 0;" href="#myCarousel" role="button" data-slide="next">
                                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true" style="font-size: 30px; color: #333; position: absolute; top: 50%; transform: translateY(-50%);"></span>
                                            <span class="sr-only">&gt;</span>
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <hr />
        <div class="main-container">
            <div class="side-div">
                <div class="sub-div">
                    <img src="https://www.pngall.com/wp-content/uploads/11/CPU-PNG-Images.png" alt="CPU Image">
                    <h2>CPU</h2>
                    <p>It interprets computer instructions and processes data. It is considered the most important component in a computer.</p>
                </div>

                <div class="sub-div">
                    <img src="https://www.pngall.com/wp-content/uploads/5/Graphic-Card-PNG-Image.png" alt="GPU Image">
                    <h2>GPU</h2>
                    <p>GPU is either integrated into CPU or separately mounted on the motherboard. GPU is specially used to run drawing operations, which reduces the work of CPU.</p>
                </div>
            </div>

            <div class="center-image">
                <img src="https://laptop.bg/system/images/425935/normal/lenovo_thinkpad_e16_gen_1_21JT003EBM.png" style="width:500px" alt="Laptop Image">
            </div>

            <div class="side-div">
                <div class="sub-div">
                    <img src="https://www.pngall.com/wp-content/uploads/5/Gaming-RAM-PNG-Free-Download.png" alt="RAM Image">
                    <h2>RAM</h2>
                    <p>It’s the main memory in the computer. It is used to hold data and instructions for fast processing. </p>
                </div>

                <div class="sub-div">
                    <img src="https://www.pngall.com/wp-content/uploads/5/SATA-Hard-Disk-Drive.png" alt="HDD Image">
                    <h2>HDD</h2>
                    <p>They are non-volatile devices and are used to store data like app installation packages and personal files like photos, documents, etc.</p>
                </div>
            </div>
        </div>
        <div class="sub-div side-div" style="margin-left:520px;margin-top:-200px">
            <img src="https://www.pngall.com/wp-content/uploads/2016/04/Motherboard-Free-PNG-Image.png" alt="Motherboard Image">
            <h2>Motherboard</h2>
            <p>A motherboard is the main hub of a computer. It connects all the important parts, like the CPU, RAM, and HDD, so they can work together.</p>
        </div>
        <hr />
        <div class="row mt-4">
            <div class="col-md-3">
                <img src="https://img.freepik.com/free-photo/business-accessories-objects-top-view_1150-7579.jpg?size=626&ext=jpg&ga=GA1.1.80688386.1704303660&semt=ais" alt="Banner 1" style="width: 100%; height: auto; border-radius: 12px;">
            </div>
            <div class="col-md-3">
                <img src="https://img.freepik.com/free-photo/top-view-workspace-with-laptop-notebook_23-2148430831.jpg?size=626&ext=jpg&ga=GA1.1.80688386.1704303660&semt=ais" alt="Banner 2" style="width: 100%; height: auto; border-radius: 12px;">
            </div>
            <div class="col-md-3">
                <img src="https://img.freepik.com/free-photo/top-view-set-gadgets-purple-neon-light-blue_155003-19116.jpg?size=626&ext=jpg&ga=GA1.1.80688386.1704303660&semt=ais" alt="Banner 3" style="width: 100%; height: auto; border-radius: 12px;">
            </div>
            <div class="col-md-3">
                <img src="https://img.freepik.com/free-photo/top-view-set-gadgets-purple-neon-light-pink_155003-19113.jpg?size=626&ext=jpg&ga=GA1.1.80688386.1704303660&semt=ais" alt="Banner 4" style="width: 100%; height: auto; border-radius: 12px;">
            </div>
        </div>
    </div>
    <div class="row mt-4 justify-content-center">
        @foreach (var laptop in Model)
        {
            <div class="col-md-2" style="margin-left:30px">
                <div class="divhover">
                    <a style="cursor: pointer;" href="/Laptops/GetLaptop/@laptop.Id">
                        <div class="article-container" style="width:500px">
                            <img class="article-image" src=@laptop.ImageUrl alt="Article Image">
                            <div class="image-name text-truncate" style="font-size:21px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@laptop.Manufacturer @laptop.ModelName</div>

                            <div class="checkmarks">
                                <div class="checkmark">
                                    <span class="checkmark-symbol">&#10003;</span>
                                    <div style="font-size:20px" class="checkmark-text">@laptop.CPU</div>
                                </div>

                                <div class="checkmark">
                                    <span class="checkmark-symbol">&#10003;</span>
                                    <div style="font-size:20px" class="checkmark-text">@laptop.GPU</div>
                                </div>

                                <div class="checkmark">
                                    <span class="checkmark-symbol">&#10003;</span>
                                    <div style="font-size:20px" class="checkmark-text">@laptop.Ram</div>
                                </div>
                                <span style="color:black;font-size:23px">@laptop.Price$</span>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
    


    <!-- jQuery and Bootstrap JS files -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>

</body>
</html>
